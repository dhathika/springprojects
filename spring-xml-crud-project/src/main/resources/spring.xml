<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="order" class="com.dhathika.dto.Order">
		<property name="orderId" value="1019"></property>
		<property name="orderName" value="ssd"></property>
		<property name="orderPrice" value="25000.50"></property>
	</bean>
	<bean id="orderService" class="com.dhathika.service.OrderService" autowire="autodetect">
	</bean>
	<bean id="orderDao" class="com.dhathika.dao.OrderDao" autowire="autodetect">
	</bean>
	<bean id="util" class="com.dhathika.util.ConnectionUtil">
		<property name="driver"
			value="oracle.jdbc.driver.OracleDriver"></property>
		<property name="url"
			value="jdbc:oracle:thin:@localhost:1521:XE"></property>
		<property name="userName" value="system"></property>
		<property name="password" value="system"></property>
	</bean>
</beans>